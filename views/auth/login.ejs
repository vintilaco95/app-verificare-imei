<%- include('../partials/header', { title: title, user: user }) %>

<div class="auth-container">
  <div class="auth-card">
    <h1 class="auth-title">Autentificare</h1>
    <p class="auth-subtitle">Conectează-te pentru a accesa contul tău</p>
    
    <%- include('../partials/flash', { errors: errors }) %>
    
  <form action="/auth/login" method="POST" class="auth-form">
    <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
      <div class="form-group">
        <label for="email">Email</label>
        <input 
          type="email" 
          id="email" 
          name="email" 
          required 
          autocomplete="email"
          placeholder="exemplu@email.com"
        >
      </div>
      
      <div class="form-group">
        <label for="password">Parolă</label>
        <input 
          type="password" 
          id="password" 
          name="password" 
          required 
          autocomplete="current-password"
          placeholder="Parola ta"
        >
      </div>
      
      <button type="submit" class="btn btn-primary btn-block">Autentificare</button>
    </form>
    
    <p class="auth-footer">
      Nu ai cont? <a href="/auth/register">Înregistrează-te</a>
    </p>
  </div>
</div>

<%- include('../partials/footer') %>
